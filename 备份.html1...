        const sortable = new Sortable(fileList, {
            animation: 150,
            ghostClass: 'sortable-ghost',
            onEnd: function() {
                // æ›´æ–°æ–‡ä»¶é¡ºåº
                const newOrder = [];
                document.querySelectorAll('.file-item').forEach(item => {
                    const fileId = item.dataset.id;
                    const file = pdfFiles.find(f => f.id == fileId);
                    if (file) newOrder.push(file);
                });
                pdfFiles = newOrder;
            }
        });
        
        // äº‹ä»¶ç›‘å¬
        selectFilesBtn.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', handleFileSelect);
        
        dropArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropArea.classList.add('drag-over');
        });
        
        dropArea.addEventListener('dragleave', () => {
            dropArea.classList.remove('drag-over');
        });
        
        dropArea.addEventListener('drop', (e) => {
            e.preventDefault();
            dropArea.classList.remove('drag-over');
            handleFileSelect({ target: { files: e.dataTransfer.files } });
        });
        
        mergeBtn.addEventListener('click', mergePDFs);
        resetBtn.addEventListener('click', resetAll);
        prevPageBtn.addEventListener('click', () => changePage(-1));
        nextPageBtn.addEventListener('click', () => changePage(1));
        
        // é¡µé¢å°ºå¯¸é€‰æ‹©
        pageSizeSelect.addEventListener('change', () => {
            pageSize = pageSizeSelect.value;
        });
        
        // æ–¹å‘é€‰æ‹©
        orientationOptions.forEach(option => {
            option.addEventListener('click', () => {
                orientationOptions.forEach(opt => opt.classList.remove('selected'));
                option.classList.add('selected');
                pageOrientation = option.dataset.orientation;
            });
        });
        
        // å¡«å……æ–¹å¼é€‰æ‹©
        fillOptions.forEach(option => {
            option.addEventListener('click', () => {
                fillOptions.forEach(opt => opt.classList.remove('selected'));
                option.classList.add('selected');
                imageFillMode = option.dataset.fill;
            });
        });
        
        // PDFè½¬å›¾ç‰‡äº‹ä»¶ç›‘å¬
        convertCurrentPageToImageBtn.addEventListener('click', convertCurrentPageToImage);
        convertAllPagesToImageBtn.addEventListener('click', convertAllPagesToImage);
        
        imageFormatSelect.addEventListener('change', () => {
            imageFormat = imageFormatSelect.value;
            // ä»…å¯¹JPEGå’ŒWebPæ˜¾ç¤ºè´¨é‡æ»‘å—
            document.getElementById('imageQuality').parentElement.style.display = 
                (imageFormat === 'jpeg' || imageFormat === 'webp') ? 'block' : 'none';
        });
        
        imageQualitySlider.addEventListener('input', () => {
            imageQuality = parseFloat(imageQualitySlider.value);
            qualityValue.textContent = Math.round(imageQuality * 100) + '%';
        });
        
