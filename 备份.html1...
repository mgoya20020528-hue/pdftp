            imageScale = parseFloat(imageScaleSelect.value);
        });
        
        // å¤„ç†æ–‡ä»¶é€‰æ‹©
        async function handleFileSelect(e) {
            const files = Array.from(e.target.files).filter(file => 
                file.type === 'application/pdf' || file.type.startsWith('image/')
            );
            
            if (files.length === 0) {
                showStatus('è¯·é€‰æ‹©PDFæˆ–å›¾ç‰‡æ–‡ä»¶', 'error');
                return;
            }
            
            showStatus(`æ­£åœ¨åŠ è½½ ${files.length} ä¸ªæ–‡ä»¶...`, 'success');
            
            for (const file of files) {
                const fileId = Date.now() + Math.random().toString(36).substr(2, 9);
                const fileType = file.type === 'application/pdf' ? 'pdf' : 'image';
                
                pdfFiles.push({
                    id: fileId,
                    file: file,
                    name: file.name,
                    size: formatFileSize(file.size),
                    type: fileType
                });
                
                createPreviewItem(fileId, file.name, file.size, file, fileType);
            }
            
            showStatus(`æˆåŠŸæ·»åŠ  ${files.length} ä¸ªæ–‡ä»¶`, 'success');
        }
        
        // åˆ›å»ºé¢„è§ˆé¡¹
        async function createPreviewItem(id, name, size, file, fileType) {
            const fileItem = document.createElement('div');
            fileItem.className = 'file-item';
            fileItem.dataset.id = id;
            
            // åˆ›å»ºç¼©ç•¥å›¾å®¹å™¨
            const thumbnail = document.createElement('div');
            thumbnail.className = 'file-thumbnail';
            thumbnail.style.width = '60px';
            thumbnail.style.height = '80px';
            thumbnail.style.marginRight = '15px';
            thumbnail.style.display = 'flex';
            thumbnail.style.alignItems = 'center';
            thumbnail.style.justifyContent = 'center';
            thumbnail.style.background = 'white';
            thumbnail.style.border = '1px solid var(--secondary)';
            thumbnail.style.borderRadius = '4px';
            thumbnail.innerHTML = '<span style="color: #666; font-size: 10px;">åŠ è½½ä¸­...</span>';
            
            fileItem.innerHTML = `
                <div class="file-info">
                    <h3>${name}</h3>
                    <p>${formatFileSize(size)}</p>
                </div>
                <button class="remove-btn" data-id="${id}">Ã—</button>
            `;
            
            // å°†ç¼©ç•¥å›¾å®¹å™¨æ’å…¥åˆ°æœ€å‰é¢
            fileItem.insertBefore(thumbnail, fileItem.firstChild);
            
            // ç”Ÿæˆé¢„è§ˆç¼©ç•¥å›¾
            if (fileType === 'pdf') {
                generatePDFThumbnail(file, thumbnail);
            } else {
                generateImageThumbnail(file, thumbnail);
            }
            
            // æ·»åŠ ç‚¹å‡»äº‹ä»¶æ˜¾ç¤ºå¤§é¢„è§ˆ
            fileItem.addEventListener('click', (e) => {
                if (!e.target.classList.contains('remove-btn')) {
                    const file = pdfFiles.find(f => f.id === id);
                    if (file) {
                        showLargePreview(file);
                        
                        // æ›´æ–°æ¿€æ´»çŠ¶æ€
                        document.querySelectorAll('.file-item').forEach(item => {
                            item.classList.remove('active');
                        });
                        fileItem.classList.add('active');
                    }
                }
            });
            
            // æ·»åŠ åˆ é™¤äº‹ä»¶
            fileItem.querySelector('.remove-btn').addEventListener('click', (e) => {
                e.stopPropagation();
                const itemId = e.target.dataset.id;
                removeFile(itemId);
            });
            
            fileList.appendChild(fileItem);
        }
        
        // ç”ŸæˆPDFç¼©ç•¥å›¾
        async function generatePDFThumbnail(file, container) {
            try {
                const arrayBuffer = await readFileAsArrayBuffer(file);
                const pdf = await pdfjsLib.getDocument({ data: arrayBuffer }).promise;
                
                // è·å–ç¬¬ä¸€é¡µ
                const page = await pdf.getPage(1);
                const viewport = page.getViewport({ scale: 0.15 }); // å°ç¼©ç•¥å›¾ä½¿ç”¨æ›´å°çš„æ¯”ä¾‹
                
                // åˆ›å»ºcanvasç”¨äºæ¸²æŸ“
                const canvas = document.createElement('canvas');
                const context = canvas.getContext('2d');
                canvas.width = viewport.width;
                canvas.height = viewport.height;
                
                // æ¸²æŸ“PDFé¡µé¢åˆ°canvas
                await page.render({
                    canvasContext: context,
                    viewport: viewport
                }).promise;
                
                // å°†canvasè½¬æ¢ä¸ºå›¾ç‰‡URL
                const dataUrl = canvas.toDataURL('image/jpeg', 0.7);
                
                // åˆ›å»ºå›¾ç‰‡å…ƒç´ æ˜¾ç¤ºç¼©ç•¥å›¾
                const img = document.createElement('img');
                img.src = dataUrl;
                img.style.width = '100%';
                img.style.height = '100%';
                img.style.objectFit = 'cover';
                
                // æ¸…ç©ºå®¹å™¨å¹¶æ·»åŠ å›¾ç‰‡
                container.innerHTML = '';
                container.appendChild(img);
                
            } catch (error) {
                console.error('ç”ŸæˆPDFç¼©ç•¥å›¾å¤±è´¥:', error);
                container.innerHTML = '<span style="color: #999; font-size: 8px;">é¢„è§ˆå¤±è´¥</span>';
            }
        }
        
        // ç”Ÿæˆå›¾ç‰‡ç¼©ç•¥å›¾
        function generateImageThumbnail(file, container) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = document.createElement('img');
                img.src = e.target.result;
                img.style.width = '100%';
                img.style.height = '100%';
                img.style.objectFit = 'cover';
                img.style.borderRadius = '3px';
                
                container.innerHTML = '';
                container.appendChild(img);
            };
            reader.readAsDataURL(file);
        }
        
        // æ˜¾ç¤ºå¤§é¢„è§ˆ
        async function showLargePreview(file) {
            currentPreviewFile = file;
            currentPage = 1;
            
            previewContainer.innerHTML = '<div style="text-align: center; padding: 20px;">æ­£åœ¨åŠ è½½é¢„è§ˆ...</div>';
            previewInfo.innerHTML = '';
            previewControls.style.display = 'none';
            
            try {
                if (file.type === 'pdf') {
                    const arrayBuffer = await readFileAsArrayBuffer(file.file);
                    currentPdfDoc = await pdfjsLib.getDocument({ data: arrayBuffer }).promise;
                    totalPages = currentPdfDoc.numPages;
                    
                    // æ¸²æŸ“ç¬¬ä¸€é¡µ
                    await renderPage(currentPage);
                    
                    // æ›´æ–°é¢„è§ˆä¿¡æ¯
                    previewInfo.innerHTML = `
                        <strong>${file.name}</strong> - ${file.size} - å…± ${totalPages} é¡µ
                    `;
                    
                    // æ˜¾ç¤ºç¿»é¡µæ§ä»¶
                    previewControls.style.display = 'flex';
                    updatePageInfo();
                } else {
                    // å›¾ç‰‡æ–‡ä»¶é¢„è§ˆ
                    const img = document.createElement('img');
                    img.src = URL.createObjectURL(file.file);
                    img.className = 'large-preview';
                    img.alt = `é¢„è§ˆ: ${file.name}`;
                    
                    // æ¸…ç©ºå®¹å™¨å¹¶æ·»åŠ å›¾ç‰‡
                    previewContainer.innerHTML = '';
                    previewContainer.appendChild(img);
                    
                    // æ›´æ–°é¢„è§ˆä¿¡æ¯
                    previewInfo.innerHTML = `
                        <strong>${file.name}</strong> - ${file.size}
                    `;
                }
            } catch (error) {
                console.error('ç”Ÿæˆå¤§é¢„è§ˆå¤±è´¥:', error);
                previewContainer.innerHTML = `
                    <div class="preview-placeholder">
                        <i>âŒâŒ</i>
                        <p>é¢„è§ˆåŠ è½½å¤±è´¥</p>
                    </div>
                `;
                previewInfo.innerHTML = `<span style="color: red;">é¢„è§ˆåŠ è½½å¤±è´¥: ${error.message}</span>`;
            }
        }
        
        // æ¸²æŸ“æŒ‡å®šé¡µé¢
        async function renderPage(pageNum) {
            if (!currentPdfDoc || pageNum < 1 || pageNum > totalPages) return;
            
            previewContainer.innerHTML = '<div style="text-align: center; padding: 20px;">æ­£åœ¨åŠ è½½é¡µé¢...</div>';
            
            try {
                const page = await currentPdfDoc.getPage(pageNum);
                const viewport = page.getViewport({ scale: 1.0 }); // å¤§é¢„è§ˆä½¿ç”¨æ­£å¸¸æ¯”ä¾‹
                
                // åˆ›å»ºcanvasç”¨äºæ¸²æŸ“
                const canvas = document.createElement('canvas');
                const context = canvas.getContext('2d');
                canvas.width = viewport.width;
                canvas.height = viewport.height;
                
                // æ¸²æŸ“PDFé¡µé¢åˆ°canvas
                await page.render({
                    canvasContext: context,
                    viewport: viewport
                }).promise;
                
                // åˆ›å»ºå›¾ç‰‡å…ƒç´ æ˜¾ç¤ºå¤§é¢„è§ˆ
                const img = document.createElement('img');
                img.src = canvas.toDataURL();
                img.className = 'large-preview';
                img.alt = `é¢„è§ˆ: ${currentPreviewFile.name} - ç¬¬ ${pageNum} é¡µ`;
                
                // æ¸…ç©ºå®¹å™¨å¹¶æ·»åŠ å›¾ç‰‡
                previewContainer.innerHTML = '';
                previewContainer.appendChild(img);
                
            } catch (error) {
                console.error('æ¸²æŸ“é¡µé¢å¤±è´¥:', error);
                previewContainer.innerHTML = `
                    <div class="preview-placeholder">
                        <i>âŒâŒ</i>
                        <p>é¡µé¢åŠ è½½å¤±è´¥</p>
                    </div>
                `;
            }
        }
        
        // åˆ‡æ¢é¡µé¢
        function changePage(delta) {
            const newPage = currentPage + delta;
            if (newPage >= 1 && newPage <= totalPages) {
                currentPage = newPage;
                renderPage(currentPage);
                updatePageInfo();
            }
        }
        
        // æ›´æ–°é¡µé¢ä¿¡æ¯
        function updatePageInfo() {
            pageInfo.textContent = `${currentPage} / ${totalPages}`;
            prevPageBtn.disabled = currentPage === 1;
            nextPageBtn.disabled = currentPage === totalPages;
        }
        
        // åˆ é™¤æ–‡ä»¶
        function removeFile(id) {
            const fileIndex = pdfFiles.findIndex(file => file.id === id);
            if (fileIndex !== -1) {
                // å¦‚æœåˆ é™¤çš„æ˜¯å½“å‰é¢„è§ˆçš„æ–‡ä»¶ï¼Œæ¸…ç©ºé¢„è§ˆ
                if (currentPreviewFile && currentPreviewFile.id === id) {
                    previewContainer.innerHTML = `
                        <div class="preview-placeholder">
                            <i>ğŸ‘†ğŸ‘†</i>
                            <p>ç‚¹å‡»å·¦ä¾§æ–‡ä»¶æŸ¥çœ‹é¢„è§ˆ</p>
                        </div>
                    `;
                    previewInfo.innerHTML = '';
                    previewControls.style.display = 'none';
                    currentPreviewFile = null;
                    currentPdfDoc = null;
                }
                
                pdfFiles.splice(fileIndex, 1);
                document.querySelector(`.file-item[data-id="${id}"]`).remove();
            }
        }
        
        // åˆå¹¶PDF
        async function mergePDFs() {
            if (pdfFiles.length === 0) {
                showStatus('è¯·å…ˆæ·»åŠ æ–‡ä»¶', 'error');
                return;
            }
            
            showStatus('æ­£åœ¨å¤„ç†ï¼Œè¯·ç¨å€™...', 'success');
            mergeBtn.disabled = true;
            btnText.textContent = 'å¤„ç†ä¸­...';
            
            try {
                const { PDFDocument } = PDFLib;
                const mergedPdf = await PDFDocument.create();
                
                for (const file of pdfFiles) {
                    if (file.type === 'pdf') {
                        // å¤„ç†PDFæ–‡ä»¶
                        const arrayBuffer = await readFileAsArrayBuffer(file.file);
                        const pdfDoc = await PDFDocument.load(arrayBuffer);
                        const pages = await mergedPdf.copyPages(pdfDoc, pdfDoc.getPageIndices());
                        pages.forEach(page => mergedPdf.addPage(page));
                    } else {
                        // å¤„ç†å›¾ç‰‡æ–‡ä»¶
                        const arrayBuffer = await readFileAsArrayBuffer(file.file);
                        const image = await mergedPdf.embedJpg(arrayBuffer);
                        
                        // æ ¹æ®ç”¨æˆ·é€‰æ‹©çš„å°ºå¯¸å’Œæ–¹å‘ç¡®å®šé¡µé¢å°ºå¯¸
                        let pageWidth, pageHeight;
                        
                        switch (pageSize) {
                            case 'A4':
                                if (pageOrientation === 'portrait') {
                                    pageWidth = 595; // A4 çºµå‘ (210mm * 2.83465)
                                    pageHeight = 842; // A4 çºµå‘ (297mm * 2.83465)
                                } else {
                                    pageWidth = 842; // A4 æ¨ªå‘ (297mm * 2.83465)
                                    pageHeight = 595; // A4 æ¨ªå‘ (210mm * 2.83465)
                                }
                                break;
                            case 'A3':
                                if (pageOrientation === 'portrait') {
                                    pageWidth = 842; // A3 çºµå‘ (297mm * 2.83465)
                                    pageHeight = 1191; // A3 çºµå‘ (420mm * 2.83465)
                                } else {
                                    pageWidth = 1191; // A3 æ¨ªå‘ (420mm * 2.83465)
                                    pageHeight = 842; // A3 æ¨ªå‘ (297mm * 2.83465)
                                }
                                break;
                            case 'letter':
                                if (pageOrientation === 'portrait') {
                                    pageWidth = 612; // Letter çºµå‘ (8.5è‹±å¯¸ * 72)
                                    pageHeight = 792; // Letter çºµå‘ (11è‹±å¯¸ * 72)
                                } else {
                                    pageWidth = 792; // Letter æ¨ªå‘ (11è‹±å¯¸ * 72)
                                    pageHeight = 612; // Letter æ¨ªå‘ (8.5è‹±å¯¸ * 72)
                                }
                                break;
                            default: // åŸå§‹å°ºå¯¸
                                pageWidth = image.width;
                                pageHeight = image.height;
                                break;
                        }
                        
                        // åˆ›å»ºé¡µé¢
                        const page = mergedPdf.addPage([pageWidth, pageHeight]);
                        
                        // æ ¹æ®å¡«å……æ–¹å¼è®¡ç®—å›¾ç‰‡å°ºå¯¸å’Œä½ç½®
                        const imgWidth = image.width;
                        const imgHeight = image.height;
                        const imgAspectRatio = imgWidth / imgHeight;
                        const pageAspectRatio = pageWidth / pageHeight;
                        
                        let drawWidth, drawHeight, x, y;
                        
                        if (imageFillMode === 'stretch') {
                            // æ‹‰ä¼¸å¡«å……ï¼šå®Œå…¨å¡«å……é¡µé¢
                            drawWidth = pageWidth;
                            drawHeight = pageHeight;
                            x = 0;
                            y = 0;
                        } else if (imageFillMode === 'cover') {
                            // è£å‰ªå¡«å……ï¼šä¿æŒæ¯”ä¾‹ï¼Œè£å‰ªå¤šä½™éƒ¨åˆ†
                            const scaleRatio = Math.max(pageWidth / imgWidth, pageHeight / imgHeight);
                            drawWidth = imgWidth * scaleRatio;
                            drawHeight = imgHeight * scaleRatio;
                            x = (pageWidth - drawWidth) / 2;
                            y = (pageHeight - drawHeight) / 2;
                        } else {
                            // ä¿æŒæ¯”ä¾‹ï¼šç­‰æ¯”ä¾‹ç¼©æ”¾ï¼Œå¯èƒ½ç•™ç™½
                            const scaleRatio = Math.min(pageWidth / imgWidth, pageHeight / imgHeight);
                            drawWidth = imgWidth * scaleRatio;
                            drawHeight = imgHeight * scaleRatio;
                            x = (pageWidth - drawWidth) / 2;
                            y = (pageHeight - drawHeight) / 2;
                        }
                        
                        // åœ¨é¡µé¢ä¸Šç»˜åˆ¶å›¾ç‰‡
                        page.drawImage(image, {
                            x: x,
                            y: y,
                            width: drawWidth,
                            height: drawHeight
                        });
                    }
                }
                
                const mergedPdfBytes = await mergedPdf.save();
                const blob = new Blob([mergedPdfBytes], { type: 'application/pdf' });
                const url = URL.createObjectURL(blob);
                
                // åˆ›å»ºä¸‹è½½é“¾æ¥
                const a = document.createElement('a');
                a.href = url;
                a.download = `${fileNameInput.value || 'merged'}.pdf`;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
                
                showStatus('PDFåˆå¹¶æˆåŠŸå¹¶å·²å¼€å§‹ä¸‹è½½', 'success');
            } catch (error) {
                console.error('åˆå¹¶PDFæ—¶å‡ºé”™:', error);
                showStatus('åˆå¹¶å¤±è´¥: ' + error.message, 'error');
            } finally {
                mergeBtn.disabled = false;
                btnText.textContent = 'åˆå¹¶å¹¶å¯¼å‡ºPDF';
            }
        }
        
        // PDFè½¬å›¾ç‰‡åŠŸèƒ½
        async function convertCurrentPageToImage() {
            if (!currentPdfDoc) {
                showStatus('è¯·å…ˆé€‰æ‹©PDFæ–‡ä»¶', 'error');
                return;
            }
            
            try {
                convertCurrentPageToImageBtn.disabled = true;
                convertCurrentPageToImageBtn.querySelector('.btn-text').textContent = 'è½¬æ¢ä¸­...';
                
                const page = await currentPdfDoc.getPage(currentPage);
                const viewport = page.getViewport({ scale: imageScale });
                
                const canvas = document.createElement('canvas');
                const context = canvas.getContext('2d');
                canvas.width = viewport.width;
                canvas.height = viewport.height;
                
                await page.render({
                    canvasContext: context,
                    viewport: viewport
                }).promise;
                
                // æ ¹æ®é€‰æ‹©çš„æ ¼å¼å’Œè´¨é‡è½¬æ¢å›¾ç‰‡
                let mimeType, fileName;
                switch (imageFormat) {
                    case 'jpeg':
                        mimeType = 'image/jpeg';
                        fileName = `page_${currentPage}.jpg`;
                        break;
                    case 'webp':
                        mimeType = 'image/webp';
                        fileName = `page_${currentPage}.webp`;
                        break;
                    default:
                        mimeType = 'image/png';
                        fileName = `page_${currentPage}.png`;
                        break;
                }
                
                // è½¬æ¢å¹¶ä¸‹è½½
                canvas.toBlob(blob => {
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = fileName;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    URL.revokeObjectURL(url);
                    
                    showStatus(`ç¬¬ ${currentPage} é¡µå·²è½¬æ¢ä¸ºå›¾ç‰‡`, 'success');
                }, mimeType, imageQuality);
                
            } catch (error) {
                console.error('è½¬æ¢å½“å‰é¡µä¸ºå›¾ç‰‡æ—¶å‡ºé”™:', error);
                showStatus('è½¬æ¢å¤±è´¥: ' + error.message, 'error');
            } finally {
                convertCurrentPageToImageBtn.disabled = false;
                convertCurrentPageToImageBtn.querySelector('.btn-text').textContent = 'è½¬æ¢å½“å‰é¡µä¸ºå›¾ç‰‡';
            }
        }
        
        async function convertAllPagesToImage() {
            if (!currentPdfDoc) {
                showStatus('è¯·å…ˆé€‰æ‹©PDFæ–‡ä»¶', 'error');
                return;
            }
            
            try {
                convertAllPagesToImageBtn.disabled = true;
                convertAllPagesToImageBtn.querySelector('.btn-text').textContent = 'è½¬æ¢ä¸­...';
                
                // æ˜¾ç¤ºè¿›åº¦æ¡
                conversionProgress.style.display = 'block';
                progressFill.style.width = '0%';
                progressText.textContent = '0%';
                
                const zip = new JSZip();
                const totalPages = currentPdfDoc.numPages;
                
                for (let i = 1; i <= totalPages; i++) {
                    // æ›´æ–°è¿›åº¦
                    const progress = Math.round((i / totalPages) * 100);
                    progressFill.style.width = `${progress}%`;
                    progressText.textContent = `${progress}%`;
                    
                    const page = await currentPdfDoc.getPage(i);
                    const viewport = page.getViewport({ scale: imageScale });
                    
                    const canvas = document.createElement('canvas');
                    const context = canvas.getContext('2d');
                    canvas.width = viewport.width;
                    canvas.height = viewport.height;
                    
                    await page.render({
                        canvasContext: context,
                        viewport: viewport
                    }).promise;
                    
                    // æ ¹æ®é€‰æ‹©çš„æ ¼å¼å’Œè´¨é‡è½¬æ¢å›¾ç‰‡
                    let mimeType, fileName;
                    switch (imageFormat) {
                        case 'jpeg':
                            mimeType = 'image/jpeg';
                            fileName = `page_${i}.jpg`;
                            break;
                        case 'webp':
                            mimeType = 'image/webp';
                            fileName = `page_${i}.webp`;
                            break;
                        default:
                            mimeType = 'image/png';
                            fileName = `page_${i}.png`;
                            break;
                    }
                    
                    // å°†canvasè½¬æ¢ä¸ºblobå¹¶æ·»åŠ åˆ°zip
                    const blob = await new Promise(resolve => {
                        canvas.toBlob(resolve, mimeType, imageQuality);
                    });
                    
                    zip.file(fileName, blob);
                }
                
                // ç”Ÿæˆå¹¶ä¸‹è½½zipæ–‡ä»¶
                const zipBlob = await zip.generateAsync({ type: 'blob' });
                saveAs(zipBlob, 'converted_pages.zip');
                
                showStatus(`æ‰€æœ‰ ${totalPages} é¡µå·²è½¬æ¢ä¸ºå›¾ç‰‡å¹¶æ‰“åŒ…ä¸‹è½½`, 'success');
                conversionProgress.style.display = 'none';
                
            } catch (error) {
                console.error('è½¬æ¢æ‰€æœ‰é¡µä¸ºå›¾ç‰‡æ—¶å‡ºé”™:', error);
                showStatus('è½¬æ¢å¤±è´¥: ' + error.message, 'error');
                conversionProgress.style.display = 'none';
            } finally {
                convertAllPagesToImageBtn.disabled = false;
                convertAllPagesToImageBtn.querySelector('.btn-text').textContent = 'è½¬æ¢å…¨éƒ¨é¡µä¸ºå›¾ç‰‡';
            }
        }
        
        // é‡ç½®æ‰€æœ‰
        function resetAll() {
            pdfFiles = [];
            fileList.innerHTML = '';
            previewContainer.innerHTML = `
                <div class="preview-placeholder">
                    <i>ğŸ‘†ğŸ‘†</i>
                    <p>ç‚¹å‡»å·¦ä¾§æ–‡ä»¶æŸ¥çœ‹é¢„è§ˆ</p>
                </div>
            `;
            previewInfo.innerHTML = '';
            previewControls.style.display = 'none';
            fileNameInput.value = 'åˆå¹¶æ–‡æ¡£';
            pageSizeSelect.value = 'A4';
            pageOrientation = 'portrait';
            imageFillMode = 'stretch';
            statusMessage.style.display = 'none';
            currentPreviewFile = null;
            currentPdfDoc = null;
            
            // é‡ç½®é€‰æ‹©çŠ¶æ€
            orientationOptions.forEach(option => {
                option.classList.remove('selected');
                if (option.dataset.orientation === 'portrait') {
                    option.classList.add('selected');
                }
            });
            
            fillOptions.forEach(option => {
                option.classList.remove('selected');
                if (option.dataset.fill === 'stretch') {
                    option.classList.add('selected');
                }
            });
            
            // é‡ç½®PDFè½¬å›¾ç‰‡è®¾ç½®
            imageFormatSelect.value = 'png';
            imageQualitySlider.value = 0.9;
            qualityValue.textContent = '90%';
            imageScaleSelect.value = '2';
            conversionProgress.style.display = 'none';
        }
        
        // æ˜¾ç¤ºçŠ¶æ€æ¶ˆæ¯
        function showStatus(message, type) {
            statusMessage.textContent = message;
            statusMessage.className = `status-message ${type}`;
            statusMessage.style.display = 'block';
            
            // 5ç§’åè‡ªåŠ¨éšè—
            setTimeout(() => {
                statusMessage.style.display = 'none';
            }, 5000);
        }
        
        // è¾…åŠ©å‡½æ•°
        function readFileAsArrayBuffer(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.onload = () => resolve(reader.result);
                reader.onerror = reject;
                reader.readAsArrayBuffer(file);
            });
        }
        
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
    </script>
</body>
